<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-lg-8">
      <div class="form-edit-member">
        <h1>Editar membro</h1>
        <%= simple_form_for(@member) do |f| %>

          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">

          <%= f.input :first_name, label: 'Nome' %>
          <%= f.input :last_name, label: 'Sobrenome' %>

          <%= f.input :birth_date, order: [:day, :month, :year], label: 'Data de Nascimento' %>

          <%= f.input :gender, as: :radio_buttons, collection: [['0', 'Feminino'], ['1', 'Masculino']], label_method: :second, value_method: :first %>
          <%= f.input :category, as: :radio_buttons, collection: [['0', 'Titular'], ['1', 'Dependente']], label_method: :second, value_method: :first %>

          <%= f.input :user_id, as: :hidden %>


          <%= f.simple_fields_for :member_vaccines do |mv| %>
          <div class="vaccines">
            <h5><%= mv.object.vaccine.name.upcase %></h5>

            <p><%= mv.date_field :vaccine_date %></p>

            <p><%= mv.input :vaccinated %></p>
            </div>
          <% end %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, value: "Editar", class: "btn btn-primary" %>
          </div>
            <% end %>

      </div>

    <%= link_to 'Voltar ao perfil', @member %> |
    <%= link_to 'Voltar à página principal', members_path %>
    </div>
  </div>
</div>
