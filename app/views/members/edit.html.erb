<%= simple_form_for(@member) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs" style="width: 600px; margin: 0 auto; padding-top: 30px;">
    <%= f.input :first_name, label: 'Nome' %>
    <%= f.input :last_name, label: 'Sobrenome' %>
    <%= f.date_field :birth_date, label: 'Data de nascimento', placeholder: ""%>
    <%= f.input :gender, as: :radio_buttons, collection: [['0', 'Feminino'], ['1', 'Masculino']], label_method: :second, value_method: :first %>
    <%= f.input :category, as: :radio_buttons, collection: [['0', 'Titular'], ['1', 'Dependente']], label_method: :second, value_method: :first %>
    <%= f.input :user_id, as: :hidden %>

    <%= f.simple_fields_for :member_vaccines do |mv| %>
      <%= mv.object.vaccine.name %>
      <%= mv.date_field :vaccine_date %>
      <%= mv.input :vaccinated %>
    <% end %>
  </div>

  <div class="form-actions" style="width: 600px; margin: 0 auto; padding-top: 30px;">
    <%= f.button :submit, value: "Editar", class: "btn btn-outline-success" %>
  </div>
<% end %>


<%= link_to 'Voltar ao perfil', @member %> |
