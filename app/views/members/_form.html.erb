<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-lg-8">
      <div class="form-member">
        <h1>Adicionar membro</h1>
        <%= simple_form_for(@member) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :first_name, label: 'Nome' %>
            <%= f.input :last_name, label: 'Sobrenome' %>
            <%= f.input :birth_date, order: [:day, :month, :year], label: 'Data de nascimento'%>
            <%= f.input :gender, as: :radio_buttons, collection: [['0', 'Feminino'], ['1', 'Masculino']], label_method: :second, value_method: :first, label: 'GÃªnero' %>
            <%= f.input :category, as: :radio_buttons, collection: [['0', 'Titular'], ['1', 'Dependente']], label_method: :second, value_method: :first, label: 'Conta' %>
            <%= f.input :user_id, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, value: "Adicionar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


