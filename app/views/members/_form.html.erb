<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-8 col-sm-8 col-lg-12">
      <div class="form-member">
        <h1>Adicionar familiar</h1>
        <%= simple_form_for(@member) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :first_name, label: 'Nome' %>
            <%= f.input :last_name, label: 'Sobrenome' %>
            <%= f.input :birth_date, order: [:day, :month, :year], start_year: Date.today.year - 100, end_year: Date.today.year, label: 'Data de nascimento'%>
            <div class="row radio-inline">
              <div class="col-xs-6 flex-fill px-3">
            <%= f.input :gender, as: :radio_buttons, collection: ['Feminino', 'Masculino'], wrapper: :inline_checkbox, label: 'Sexo' %>
              </div>
              <div class="col-xs-6 flex-fill px-3">

            <%= f.input :category, as: :radio_buttons, collection: ['Titular', 'Dependente'], wrapper: :inline_checkbox, label: 'Conta' %>
              </div>
            </div>
            <%= f.input :user_id, as: :hidden %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, value: "Adicionar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


