<div class="container mt-3 mb-3">
  <h2><strong>Escolha a clínica</strong></h2>

  <div class="map-text-card">
      <%= cl_image_tag @member.photo, crop: :fill %>
      <div>
        <h5><b><%= @member.first_name %> <%= @member.last_name %></b></h5>
        <h5><% if @member.category == 0 %>
            <%= "Titular" %> |
          <% else %>
            <%= "Dependente" %> |
          <% end %>
        <%= @member.birth_date %> |
          <% if @member.gender == 0 %>
            <%= "Sexo: Feminino" %></h5>
          <% else %>
            <%= "Sexo: Masculino" %></h5>
          <% end %>
      </div>
  </div>
  <div class="map-text-card">
      <div>
        <h5><b><%= @vaccine.name %></b></h5>
        <p><%= @vaccine.description %></p>
      </div>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 400px;
    border-radius: 10px"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <div class="map-key">
    <div><%= image_tag "icon_red.png" %></div><p>Rede pública</p>
    <div><%= image_tag "icon_blue.png" %></div><p>Rede privada</p>
  </div>
</div>
