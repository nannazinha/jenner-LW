<div class="container">
  <div class="col-12 col-lg-8 offset-lg-2">
    <h1>ESCOLHA A CLÍNICA</h1>

    <div class="card">
      <div class="card-body">
        <% if @member.photo.url %>
          <%= cl_image_tag @member.photo, class: "float-left rounded-circle w-25 mr-4" %>
        <% else %>
          <%= image_tag "default.jpg", class: "float-left rounded-circle w-25 mr-4" %>
        <% end %>
        <div class="message">
          <h5 class="card-title"><%= @member.first_name.upcase %> <%= @member.last_name.upcase %></h5>
          <h6 class="card-subtitle mb-3 text-muted"> <%= @member.birth_date.strftime("%d/%m/%Y") %> | <%= @member.gender %></h6>
          <p class="card-text"><%= @member.category %></p>
        </div>
      </div>
    </div>


    <li class="list-unstyled mb-2">
      <button class="vaccine-list-btn btn-full btn-primary" href="#Submenu-<%= @vaccine.id %>" data-toggle="collapse" aria-expanded="false">
        <i class="fas fa-syringe"></i>
          <span><%= @vaccine.name %></span>
      </button>
      <ul class="collapse list-unstyled mt-2" id="Submenu-<%= @vaccine.id %>">
        <li><p><%= @vaccine.description %></p></li>
      </ul>
    </li>

    <div
      id="map"
      style="width: 100%;
      height: 500px;
      border-radius: 10px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>

    <div class="map-key">
      <div><%= image_tag "icon_red.png" %></div><p>REDE PÚBLICA</p>
      <div><%= image_tag "icon_blue.png" %></div><p>REDE PRIVADA</p>
    </div>
  </div>
</div>
