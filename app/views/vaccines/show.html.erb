<div class="container mt-3 mb-3">
  <h2><strong>Escolha a cl√≠nica</strong></h2>

  <div class="map-text-card">
    <div class="map-text-card-sub">
      <h3><b><%= @member.first_name %> <%= @member.last_name %></b></h3>
      <h4><% if @member.category == 0 %>
          <%= "Titular" %></h4>
        <% else %>
          <%= "Dependente" %>
        <% end %>
      <h5><%= @member.birth_date %> |
        <% if @member.gender == 0 %>
          <%= "Sexo: Feminino" %></h5>
        <% else %>
          <%= "Sexo: Masculino" %></h5>
        <% end %>
    </div>
    <div class="map-text-card-divisoria"></div>
    <div class="map-text-card-sub">
      <h4><b><%= @vaccine.name %></b></h4>
      <p><%= @vaccine.description %></p>
    </div>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 400px;
    border-radius: 10px"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
